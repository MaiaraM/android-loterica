<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextInputBall" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/text_input_ball</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/number_default</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextResultBall">
        <item name="android:background">@drawable/text_input_ball</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">19dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="TextBaseLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">19dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

</resources>


